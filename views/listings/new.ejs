<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-0">
            <br>
            <h3>Create new listings</h3>
    <form method="POST" action="/listings">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" placeholder="enter title" class="form-control">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="listing[description]" placeholder="enter description" class="form-control"></textarea>
            
        </div>
        <div class="mb-3">
        <label for="image" class="form-label">image</label>
            <input rows="3" cols="20" type="text" name="listing[image]" placeholder="select image URL" class="form-control">
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listing[price]" placeholder="1299" class="form-control" >
            </div>
            <div class="mb-3 col-md-8">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" placeholder="enter location" class="form-control">
    
            </div>
           
           <div class="mb-3">
            <label for="country" class="col-form-label">Country</label>
            <input type="text" name="listing[country]" placeholder="India" class="form-control">
           </div>

        </div>
       <br>
        
        <button class="btn btn-danger">Add</button>
        <br><br>
    </form>
</div>
</div>
    
</body>
