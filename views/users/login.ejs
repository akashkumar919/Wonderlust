<% layout("/layouts/boilerplate") %>

<div class="row mt-3 mb-3">
    <div class="col col-6 sign-up-page">
        <h4 class="row ms-auto">Log In</h4>
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label"><b>Username</b></label>
                <input 
                type="text" 
                id="username" 
                placeholder="Username" 
                name="username" 
                class="form-control"
                required>
            </div>

            <div class=" mb-3">
                <label for="password" class="form-label"><b>Password</b></label>
                <input 
                type="password" 
                id="password" 
                placeholder="enter password" 
                name="password" 
                class="form-control"
                required>
                
            </div>
           
            <button class="btn btn-success login-signup-btn"><b>Login</b></button>
            <p><b><a href="##" class="row ms-auto mt-2">forgot password?</a></b></p>
            <hr>
            <div class="mt-3 signup-link">
                <p>Don't have an account?<b><a href="/signup" > Sign up</a></b></p>
            </div>

        </form>
    </div>
</div>
